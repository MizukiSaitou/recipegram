
<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>

<%= @user.username %>

<% if @user.id == current_user.id %>
<%= @user.email %>
<%= link_to"編集", edit_user_path(@user) %>
<% end %>

<%= @user.profile %>

<% @users.each do |recipe| %>

  <%= attachment_image_tag recipe, :image %>

  <%= link_to"このレシピを見る", recipe_path(recipe) do %>
  <% end %>
  
  <% if @user.id == current_user.id %>
  
  <%= link_to"このレシピを編集する", edit_recipe_path(recipe) do %>
  
  <% end %>

  <%= link_to"このレシピを削除する", recipe_path(recipe), method: :delete, data: {confirm: "削除しますか？"} %>
  
  <% end %>
  
  <%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %>更新
<% end %>
